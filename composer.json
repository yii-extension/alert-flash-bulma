{
    "name": "yii-extension/alert-flash-bulma",
    "type": "library",
    "description": "Alert Flash Bulma Widget.",
    "keywords": [
        "yii",
        "alert",
        "flash",
        "bulma",
        "widget"
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": "^7.4|^8.0",
        "yii-extension/asset-bulma": "^1.0.0",
        "yii-extension/widgets": "^1.0.0",
        "yiisoft/session": "^1.0"
    },
    "require-dev": {
        "nyholm/psr7": "^1.4.0",
        "phpunit/phpunit": "^9.5",
        "roave/infection-static-analysis-plugin": "^1.8",
        "vimeo/psalm": "^4.8",
        "yiisoft/var-dumper": "^1.1.0"
    },
    "autoload": {
        "psr-4": {
            "Yii\\Extension\\Bulma\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Yii\\Extension\\Bulma\\Tests\\": "tests"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0.x-dev"
        }
    },
    "config": {
        "sort-packages": true
    }
}
